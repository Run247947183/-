//P138.
//题目：两个乒乓球队比赛

int main(){
	int a, b, c;
	for (a = 'x'; a <= 'z'; ++a){
		for (b = 'x'; b <= 'z'; ++b){
			if (a != b){
				for (c = 'x'; c <= 'z'; ++c){
					if (c != a && c != b){
						if (a != 'x' && c != 'x' && c != 'z'){
							printf("a和%c比赛，b和%c比赛，c和%c比赛", a, b, c);
						}
					}
				}
			}
		}
	}
	system("pause");
	return 0;
}



void printFirstHalf(char* letters, int line){
	int count2 = 0;
	int i = 0;
	int j = 0;
	for (i = 1; i <= line + 1; ++i){
		int count1 = 0;
		for (j = 1; j <= line + 2 - i; ++j){
			printf("+");
			count1++;
		}
		for (j = 1; j <= 2 * i - 1; ++j){
			++count2;
			if (count2 < 27){
				printf("%c", letters[count2 - 1]);
			}
			else {
				count2 = 1;
				printf("%c", letters[count2 - 1]);
			}
			//printf("%c",'A');
		}
		for (j = 1; j <= count1; ++j){
			printf("+");
		}
		printf("\n");
	}
}

void printSecondHalf(char* letters, int line){
	int i = 0;
	int j = 0;
	int count2 = 3;
	for (i = line; i > 0; --i){
		int count1 = 0;
		for (j = line + 1 - i; j >= 0; --j){
			printf("+");
			++count1;
		}
		for (j = 2 * i - 2; j >= 0; --j){
			++count2;
			if (count2 < 27){
				printf("%c", letters[count2 - 1]);
			}
			else {
				count2 = 1;
				printf("%c", letters[count2 - 1]);
			}
		}
		for (j = 1; j <= count1; ++j){
			printf("+");
		}
		printf("\n");
	}
}
int main(){
	int i = 0;
	int c = 0;
	int line = 8;
	char letters[100] = { 0 };
	for (i = 'A'; i <= 'Z'; ++i){
		letters[c] = i;
		c++;
	}
	printFirstHalf(letters, line);
	printSecondHalf(letters, line);
	system("pause");
	return 0;
}

//P165
//题目：用筛选法求100之内的素数
//筛选法：1不是素数，把1划掉，2是素数把2留下，把后面2的倍数都划掉，3是素数留下来，把后面3的别墅都划掉

int main(){
	int i = 0;
	int j = 0;
	int k = 0;
	int arr[100] = { 0 };
	for (i = 0; i < 100; i++){
		arr[i] = i + 1;
	}
	arr[0] = 0;
	for (i = 0; i < 99; i++){
		for (j = i + 1; j < 100; j++){
			if (arr[j] != 0 && arr[i] != 0){
				if (arr[j] % arr[i] == 0){
					arr[j] = 0;
				}
			}
		}
	}
	for (i = 0; i < 100; i++){
		if (arr[i] != 0){
			printf("%4d", arr[i]);
			k++;
		}
		if (k % 10 == 0){
			printf("\n");
		}
	}
	system("pause");
	return 0;
}
//P165
//用选择法对10个整数排序

int main(){
	int i = 0;
	int j = 0;
	int temp = 0;
	int arr[11] = { 0 };
	printf("请输入十位整数数字：");
	for (i = 0; i < 10; i++){
		scanf("%d", &arr[i]);
	}
	printf("\n");
	printf("您输入的十位整数为：");
	for (i = 0; i < 10; i++){
		printf("%5d", arr[i]);
	}
	printf("\n");
	for (i = 0; i < 10; i++){
		int min = i;
		for (j = i + 1; j < 10; j++){
			if (arr[min] > arr[j]){
				min = j;
			}
		}
		temp = arr[i];
		arr[i] = arr[min];
		arr[min] = temp;
	}
	printf("排序后的十位整数为：");
	for (i = 0; i < 10; i++){
		printf("%5d", arr[i]);
	}
	printf("\n");
	system("pause");
	return 0;
}

//P165
//题目：求一个3X3的整型矩阵对角线元素之和

int main(){
	int arr[3][3];
	int sum1 = 0;
	int sum2 = 0;
	int j = 0;
	int i = 0;
	printf("请输入3x3整型矩阵：");
	for (i = 0; i < 3; i++){
		for (j = 0; j < 3; j++){
			scanf("%d", &arr[i][j]);
		}
	}
	for (i = 0; i < 3; i++){
		for (j = 0; j < 3; j++){
			if (i == j){
				sum1 += arr[i][j];
			}
		}
	}
	for (i = 0; i < 3; i++){
		for (j = 0; j < 3; j++){
			if ((i == j + 2) || (j == i + 2) || (i == j && i == 1)){
				sum2 += arr[i][j];
			}
		}
	}
	printf("对角线之和为：%d %d",sum1,sum2);
	system("pause");
	return 0;
}

//P165
//题目：有一个已经排序好的数组，要求输入一个数之后，按原来排序的规律将它插入数组中

int main(){
	int str[10] = { 10, 20, 30, 40, 50, 60, 70, 80, 90 };
	int i, j;
	int num = 0;
	printf("请输入一个数：");
	scanf("%d", &num);
	for (i = 0; i < 9; i++){
		if (num < str[i]){
			for (j = 9; j >= i; str[j--] = str[j - 1]){
				str[j] = num;
			}
			break;
		}
		else if (num >= str[8]){
			str[9] = num;
			break;
		}
	}
	for (i = 0; i < 10; i++){
		printf("%d ", str[i]);
	}
	system("pause");
	return 0;
}

//P165
//题目：将一个数组中的值按逆序重新存放

int main(){
	int str[] = { 8, 6, 5, 4, 1 };
	int len = sizeof(str) / sizeof(str[0]);
	int i = 0;
	int temp = 0;
	for (i = 0; i < (len / 2); i++){
		temp = str[len - i - 1];
		str[len - i - 1] = str[i];
		str[i] = temp;
	}
	for (i = 0; i < len; i++){
		printf("%d ", str[i]);
	}
	system("pause");
	return 0;
}

