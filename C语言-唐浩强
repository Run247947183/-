//P165
//题目：输出以下的杨辉三角形
#define N 10
int main(){
	int i = 0;
	int j = 0;
	int a[N][N];
	for (i = 0; i < N; i++){
			a[i][i] = 1;
			a[i][0] = 1;
	}
	for (i = 2; i < N; i++){
		for (j = 1; j <= i-1; j++){
			a[i][j] = a[i - 1][j - 1] + a[i - 1][j];
		}
	}
	for (i = 0; i < N; i++){
		for (j = 0; j <= i; j++){
			printf("%5d", a[i][j]);
		}
		printf("\n");
	}
	printf("\n");
	system("pause");
	return 0;
}
