//P109
//题目：给出一百分成绩，要求输出成绩等级‘A','B','C','D','E'.90分以上为'A',80到89分为'B'，70到79分为'C',60到69分为'D',60分以下为'E'

int main(){
	int score = 0;
	printf("请输入您的成绩：");
	scanf("%d", &score);
	if (score >=90 && score<=100){
		printf("A");
	}
	else if (score >=80 && score <= 89){
		printf("B");
	}
	else if (score >=70 && score <=79){
		printf("C");
	}
	else if (score >=60 && score <=69){
		printf("D");
	}
	else if (score>=0 && score < 60){
		printf("E");
	}
	else {
		printf("您输入的成绩分数有误，请重新输入！");
	}
	system("pause");
	return 0;
}

//P109
//题目：给一个不多于5位的正整数，要求：
//1.求出它是几位数

int Count_SeveralDigits(int num){
	int count = 0;
	if (num <= 9){
		return 1;
	}
	while (num>9){
		num = num / 10;
		count++;
	}
	return count+1;
}

//2.分别输出每一位数字

void Output_Digits(int num){
	if (num>9) {
		Output_Digits(num / 10);
	}
	printf("%d ", num % 10);
}

int main(){
	int num = 4399;
	//int ret = Count_SeveralDigits(num);
	//printf("%d\n", ret);
	if (num <= 9){
		printf("%d\n", num);
	}
	else{
		Output_Digits(num);
	}
	system("pause");
	return 0;
}

//3.按逆序输出各位数字，例如原数位321，应输出123

int main(){
	int num = 321;
	int right_num = 0;
	if (num <= 9){
		printf("%d\n", num);
	}
	else {
		while (num!=0){
			right_num = num % 10;
			printf("%d", right_num);
			num = num / 10;
		}
	}
	system("pause");
	return 0;
}


//P109
//输入4个整数，要求按从小到大的顺序输出

int main(){
	int a[4] = { 0 };
	int i, j;
	int temp = 0;
	printf("请输入4个整数：");
	for (i = 0; i < 4; ++i){
		scanf("%d", &a[i]);
	}
	for (i = 0; i < 4; ++i){
		for (j = 0; j < (3 - i); ++j){
			if (a[j]>a[j + 1]){
				temp = a[j];
				a[j] = a[j + 1];
				a[j + 1] = temp;
			}
		}
	}
	printf("这四个数的从小到大顺序如下：");
	for (i = 0; i < 4; ++i){
		printf("%d ", a[i]);
	}
	system("pause");
	return 0;
}

//P109
//题目：企业发放奖金根据利润提成
int main(){
	int i = 0;
	printf("请输入你的奖金：");
	scanf("%d", &i);
	double bonus = 0;
	if (i < 0){
		printf("您输入的奖金有误");
	}
	else if (i <= 100000){
		bonus = i * 0.1;
	}
	else if (i>100000 && i <= 200000){
		bonus = 10000 + (i - 100000)*0.075;
	}
	else if (i > 200000 && i <= 400000){
		bonus = 18500 + (i - 200000)*0.05;
	}
	else if (i > 400000 && i <= 600000){
		bonus = 37500 + (i - 400000)*0.03;
	}
	else if (i > 600000 && i <= 1000000){
		bonus = 43500 + (i - 600000)*0.015;
	}
	else{
		bonus = 49500 + (i - 1000000)*0.01;
	}
	printf("%d\n", bonus);
	system("pause");
	return 0;
}

//P137
//题目：输入一行字符，分别统计出其中英文字母，空格，数字和其他字符个数


int sain(){
	char str[] = "abc ABC 12346  &#%**";
	int letters=0;
	int space=0;
	int digit=0;
	int others=0;
	int i = 0;
	for (i = 0; str[i] != '\0'; ++i){
		if ((str[i] >= 'a' && str[i] <= 'z') || (str[i] >= 'A' && str[i] <= 'Z')){
			letters++;
		}
		else if (str[i] == ' '){
			space++;
		}
		else if (str[i] >= '0' && str[i] <= '9'){
			digit++;
		}
		else {
			others++;
		}
	}
	printf("%d %d %d %d\n", letters, space, digit, others);
	system("pause");
	return 0;
}
