//P137
//题目：输入n，n表示以个数字的位数，求从1位到n位的数字a和
//例如a=2,n=5,那么和为2+22+222+2222+22222


int main(){
	int n = 0;
	int a = 0;
	int ret = 0;
	int i = 0;
	printf("请输入一个数和它的位数：");
	scanf("%d %d", &a, &n);
	if (n == 0){
		printf("您输入的位数有问题！");
	}
	for (i = 0; i < n; i++){
		ret = a * i * 10 + a + ret 
	}
	printf("%d", ret);
	system("pause");
	return 0;
}


//P137
//题目：输入n，n表示以个数字的位数，求从1位到n位的数字a和
//例如a=2,n=5,那么和为2+22+222+2222+22222


int main(){
	int n = 0;
	int a = 0;
	int count = 0;
	int ret = 0;
	int i = 0;
	printf("请输入一个数和它的位数：");
	scanf("%d %d", &a, &n);
	if (n == 0){
		printf("您输入的位数有问题！");
	}
	for (i = 0; i < n; i++){
		count = count * 10 + a;
		ret += count;
	}
	printf("%d\n", ret);
	system("pause");
	return 0;
}

//P137
//题目：输一个数n，求1！到n！阶乘的和
//例如：求1！+2！+3！+4！+.......+20！

int main(){
	int n = 0;
	printf("请输入一个数：");
	scanf("%d", &n);
	int i = 0;
	int sum = 0;
	int ret = 1;
	for (i = 1; i <= n; ++i){
		ret *= i;
		sum += ret;
	}
	printf("%d\n", sum);
	system("pause");
	return 0;
}

//P137
//题目：输出所有水仙花数，水仙花数指的是一个三位数，其各位数字立方和等于该数字本身
//例如：153是水仙花数，因为 153=1立方+5立方+3立方

int main(){
	int i = 0;
	int ret = 0;
	int a, b, c;
	for (i = 1; i < 10000; ++i){
		a = i / 100;//百位
		b = (i / 10) % 10;//十位
		c = i % 10;//个位
		ret = a*a*a + b*b*b + c*c*c;
		if (ret == i){
			printf("%d\n", ret);
		}
	}
	system("pause");
	return 0;
}

//P137
//题目：一个数如果恰好等于它的因子之和，这个数就称为“完数”
//例如：6的因子位1，2，3，而6=1+2+3,因此6是“完数”
//求出1000之内的所有完数

int main(){
	int i = 0;
	int j = 0;
	int ret = 0;
	int k = 0;
	for (i = 2; i < 1000; ++i){
		int arr[100] = { 0 };
		k = 0;
		ret = 0;
		for (j = 1; j <= i / 2; ++j){
			if (i%j == 0){
				ret += j;
				arr[k++] = j;
			}
		}if (ret == i){
			printf("%d is factors are %d", i,arr[0]);
			for (j = 1; j < k; ++j){
				printf(",%d", arr[j]);
			}
			printf("\n");
		}
	}
	system("pause");
	return 0;
}
//P137
//题目：有一个分数序列
//  2/1，3/2，5/3，8/5，13/8，21/13，.........
//求出这个数列的前20项之和

int main(){
	int i = 0;
	double count = 0;
	double ret = 0;
	double a = 2;
	double b = 1;
	while (i<20){
		double c;
		ret = a / b;
		printf("%f ", ret);
		count += ret;
		c = a;
		a = a + b;
		b = c;
		++i;
	}
	printf("%f\n", count);
	system("pause");
	return 0;
}
//P138
//题目：一个球从100m高度自由落下，每次下落第后反弹回原来高度的一半，再下落，再反弹
//求它再第10次落地时共经过多少米，第十次反弹多高


int main(){
	double n = 100;
	int i = 0;
	double ret = 100;
	for (i = 1; i <= 10; ++i){
		n = n / 2;
		ret = ret + n * 2;
	}
	printf("%f %f\n", ret, n);
	system("pause");
	return 0;
}
