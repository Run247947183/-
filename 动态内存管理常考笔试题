void GetMemory(char** p, int num){
	*p = (char*)malloc(num);
	strcpy(*p, "hello");
	printf(*p);
	free(p);
	p = NULL;
}

void Test(void){
	char* str = NULL;
	GetMemory(&str, 100);
}
